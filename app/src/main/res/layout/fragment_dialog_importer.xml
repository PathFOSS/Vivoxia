<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/vivoxia_dialog">

    <TextView
        android:id="@+id/tv_title"
        style="@style/vivoxia_text_normal_center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/title_text_size"
        android:text="@string/at_import_data"/>

    <TextView
        android:id="@+id/tv_paragraph"
        style="@style/vivoxia_text_normal_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing"
        android:textSize="@dimen/normal_text_size"/>

    <Button
        android:id="@+id/b_cancel"
        style="@style/vivoxia_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/wide_button_height"
        app:layout_constraintTop_toBottomOf="@id/tv_paragraph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/b_confirm"
        android:layout_marginEnd="@dimen/spacing"
        android:text="@string/at_cancel"/>

    <Button
        android:id="@+id/b_confirm"
        style="@style/vivoxia_button"
        android:layout_width="0dp"
        android:layout_height="@dimen/wide_button_height"
        app:layout_constraintTop_toBottomOf="@id/tv_paragraph"
        app:layout_constraintStart_toEndOf="@id/b_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/ac_confirm"/>

</androidx.constraintlayout.widget.ConstraintLayout>