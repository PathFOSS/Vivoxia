<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/vivoxia_fragment_scroll">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/ncv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/vivoxia_linear_layout_scrollable">

            <include android:id="@+id/til_name"
                layout="@layout/text_input_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_layout_height"/>

            <include android:id="@+id/til_type"
                layout="@layout/autocomplete_layout" />

            <include android:id="@+id/cl_muscle1"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle2"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle3"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle4"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle5"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle6"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle7"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle8"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle9"
                layout="@layout/muscle_percent_layout" />

            <include android:id="@+id/cl_muscle10"
                layout="@layout/muscle_percent_layout" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageButton
        android:id="@+id/ib_add"
        android:layout_width="@dimen/button_height"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/icon_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/spacing"
        android:contentDescription="@string/ac_add"/>

</androidx.constraintlayout.widget.ConstraintLayout>