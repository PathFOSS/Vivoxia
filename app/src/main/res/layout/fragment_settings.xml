<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/vivoxia_fragment">

    <include android:id="@+id/til_gender"
        layout="@layout/autocomplete_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/text_input_layout_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include android:id="@+id/til_units"
        layout="@layout/autocomplete_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/text_input_layout_height"
        app:layout_constraintTop_toBottomOf="@id/til_gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing"/>

    <include android:id="@+id/til_age"
        layout="@layout/autocomplete_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/text_input_layout_height"
        app:layout_constraintTop_toBottomOf="@id/til_units"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing"/>

    <include android:id="@+id/til_height"
        layout="@layout/autocomplete_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/text_input_layout_height"
        app:layout_constraintTop_toBottomOf="@id/til_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing"/>

    <include android:id="@+id/til_sound"
        layout="@layout/autocomplete_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/text_input_layout_height"
        app:layout_constraintTop_toBottomOf="@id/til_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing"/>

</androidx.constraintlayout.widget.ConstraintLayout>